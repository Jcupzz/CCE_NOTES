<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="button_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/splash_gradient</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:radius">5dp</item>
    </style>


</resources>
