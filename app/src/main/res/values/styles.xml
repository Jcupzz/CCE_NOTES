<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="button_theme" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textclr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:radius">100dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:elevation">10dp</item>


    </style>

    <style name="card" parent="Widget.MaterialComponents.CardView">
            <item name="cardCornerRadius">30dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="cardBackgroundColor">@color/btn_round_clr</item>

    </style>
<style name="category_btn_theme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColor">@color/textclr</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">50sp</item>
    <item name="android:background">@drawable/sscategorybackground</item>
    <item name="android:textStyle">bold</item>
<item name="android:fontFamily">sans-serif-black</item>
    <item name="android:layout_margin">5dp</item>
</style>

</resources>
