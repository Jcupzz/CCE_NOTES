<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="button_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:radius">100dp</item>

    </style>

    <style name="card" parent="CardView">
        <item name="android:startColor">#34e89e</item>
        <item name="android:endColor">#0f3443</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardBackgroundColor">@color/end</item>

    </style>
<style name="category_btn_theme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColor">#fff</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">50sp</item>
    <item name="android:background">#c6d97f</item>
    <item name="android:textStyle">bold</item>
<item name="android:fontFamily">sans-serif-black</item>
    <item name="android:layout_margin">5dp</item>
</style>

</resources>
